<h1>Patient Name: <%= @patient.fullname %></h1>
<h1>Patient Age: <%= @patient.age %></h1>
<h1>Patient Phone: <%= @patient.phone_number %></h1>

<!-- Appointments Section -->
<div id="appointments">
  <h2>Appointments</h2>
  <%= render @appointments %>
  
  <%= form_with model: [@patient, @appointment], data: { turbo_frame: "appointments" } do |f| %>
    <%= f.datetime_field :scheduled_at %>
    <%= f.submit "Add Appointment" %>
  <% end %>

  <%= turbo_frame_tag "appointments" do %>
    <%= render @appointments %>
  <% end %>
</div>

<!-- Admissions Section -->
<div id="admissions">
  <h2>Admissions</h2>
  <%= render @admissions %>

  <%= form_with model: [@patient, @admission], data: { turbo_frame: "admissions" } do |f| %>
    <%= f.text_field :reason %>
    <%= f.submit "Add Admission" %>
  <% end %>

  <%= turbo_frame_tag "admissions" do %>
    <%= render @admissions %>
  <% end %>
</div>